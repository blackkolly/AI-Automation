{
  "name": "kubernetes-microservices-testing",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for Kubernetes microservices platform",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "./run-all-tests.sh",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:unit:watch": "jest --config=jest.config.js --testPathPattern=unit --watch",
    "test:unit:coverage": "jest --config=jest.config.js --testPathPattern=unit --coverage",
    "test:unit:ci": "jest --config=jest.config.js --testPathPattern=unit --coverage --ci --watchAll=false",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:integration:ci": "jest --config=jest.config.js --testPathPattern=integration --ci --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:performance": "echo 'Performance tests run via Docker K6 - use: docker run --rm -v $(pwd)/performance:/scripts grafana/k6 run /scripts/load-tests/api-load-test.js'",
    "test:performance:docker": "docker run --rm -v $(pwd)/performance:/scripts grafana/k6 run /scripts/load-tests/api-load-test.js",
    "test:performance:ci": "npm run test:performance:docker",
    "test:security": "npm run test:security:zap && npm run test:security:deps",
    "test:security:zap": "node security/owasp-zap/zap-scan.js",
    "test:security:deps": "npm audit --audit-level=moderate",
    "test:security:ci": "npm run test:security",
    "test:smoke": "jest --config=jest.config.js --testPathPattern=smoke",
    "test:regression": "jest --config=jest.config.js --testPathPattern=regression",
    "test:api": "newman run integration/api/postman-collection.json",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "coverage:ci": "jest --coverage --coverageReporters=lcov",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup:env": "./scripts/setup-test-env.sh",
    "cleanup:env": "./scripts/cleanup-test-env.sh",
    "generate:reports": "./scripts/generate-reports.sh",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down -v"
  },
  "keywords": [
    "testing",
    "kubernetes",
    "microservices",
    "automation",
    "performance",
    "security",
    "e2e",
    "integration",
    "unit"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "newman": "^6.0.0",
    "artillery": "^2.0.3",
    "autocannon": "^7.12.0",
    "testcontainers": "^10.4.0",
    "mongodb-memory-server": "^9.1.3",
    "dockerode": "^4.0.0",
    "allure-commandline": "^2.25.0",
    "allure-jest": "^2.15.0",
    "puppeteer": "^21.6.0",
    "selenium-webdriver": "^4.15.0",
    "webdriverio": "^8.24.0",
    "@faker-js/faker": "^8.3.1",
    "nock": "^13.4.0",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "axe-core": "^4.8.3",
    "snyk": "^1.1252.0",
    "dotenv": "^16.3.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "kill-port": "^2.0.1",
    "tree-kill": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackkolly/AI-Automation.git"
  },
  "bugs": {
    "url": "https://github.com/blackkolly/AI-Automation/issues"
  },
  "homepage": "https://github.com/blackkolly/AI-Automation#readme",
  "jest": {
    "preset": "./jest.config.js"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  }
}

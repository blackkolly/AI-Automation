# ===========================================
# MICROSERVICES PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values as needed

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=microservices
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Individual database names
AUTH_DB_NAME=auth
PRODUCTS_DB_NAME=products
ORDERS_DB_NAME=orders

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
KAFKA_BROKERS=kafka:29092
KAFKA_CLIENT_ID=microservices-platform
ZOOKEEPER_CONNECT=zookeeper:2181

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SERVICE URLS (Internal Communication)
# ===========================================
AUTH_SERVICE_URL=http://auth-service:3000
PRODUCT_SERVICE_URL=http://product-service:8080
ORDER_SERVICE_URL=http://order-service:3002
API_GATEWAY_URL=http://api-gateway:3001

# ===========================================
# EXTERNAL SERVICE URLS (Client Access)
# ===========================================
FRONTEND_URL=http://localhost:8080
API_GATEWAY_EXTERNAL_URL=http://localhost:3001

# ===========================================
# OAUTH PROVIDERS (Replace with your credentials)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# SMTP CONFIGURATION (MailHog for development)
# ===========================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@microservices-platform.local

# ===========================================
# MONITORING & TRACING
# ===========================================
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=admin

# ===========================================
# API GATEWAY CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3001

# ===========================================
# APPLICATION ENVIRONMENT
# ===========================================
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# ===========================================
# FILE STORAGE (MinIO for S3-compatible storage)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET_NAME=microservices-uploads

# ===========================================
# ELASTICSEARCH & KIBANA (Optional)
# ===========================================
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_URL=http://kibana:5601

# ===========================================
# DEVELOPMENT SPECIFIC
# ===========================================
# Enable hot reload for Node.js services
NODE_OPTIONS=--inspect=0.0.0.0:9229

# Java/Spring Boot debugging
JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005

# ===========================================
# PRODUCTION OVERRIDES (Uncomment for production)
# ===========================================
# NODE_ENV=production
# SPRING_PROFILES_ACTIVE=production
# LOG_LEVEL=warn
# JWT_SECRET=your-very-secure-production-jwt-secret
# POSTGRES_PASSWORD=your-secure-production-password
# REDIS_PASSWORD=your-secure-redis-password